<?xml version='1.0'?>
<launch>

    <!-- Argumentos Gerais -->
    <arg name="world" default="DJI_T30"/>
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="verbose" default="true" />
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>

    <!-- Definir o caminho completo para o arquivo do mundo -->
    <arg name="world_file" default="$(find simulacao)/worlds/$(arg world).world"/>

    <!-- Carregar o ambiente do mundo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_file)"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="headless" value="$(arg headless)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="verbose" value="$(arg verbose)"/>
    </include>

    <!-- Inicia o MAVRos e os Drones -->
    <group ns="drone1">
        <arg name="fcu_url" default="udp://127.0.0.1:14550@14550"/>
        <node pkg="mavros" type="mavros_node" name="mavros" output="screen">
            <param name="fcu_url" value="$(arg fcu_url)"/>
            <param name="gcs_url" value=""/>
            <param name="target_system_id" value="1"/>
            <param name="target_component_id" value="1"/>
            <rosparam param="/rosout/logger_level">debug</rosparam>
        </node>
        <node name="drone_spawner" pkg="gazebo_ros" type="spawn_model" output="screen"
              args="-sdf -file $(find simulacao)/models/EASy.sdf -model drone1 -x 0 -y 0 -z 0.5"/>
    </group>

    <group ns="drone2">
        <arg name="fcu_url" default="udp://127.0.0.1:14551@14551"/>
        <node pkg="mavros" type="mavros_node" name="mavros" output="screen">
            <param name="fcu_url" value="$(arg fcu_url)"/>
            <param name="gcs_url" value=""/>
            <param name="target_system_id" value="2"/>
            <param name="target_component_id" value="1"/>
            <rosparam param="/rosout/logger_level">debug</rosparam>
        </node>
        <node name="drone_spawner" pkg="gazebo_ros" type="spawn_model" output="screen"
              args="-sdf -file $(find simulacao)/models/EASy.sdf -model drone2 -x 5 -y 0 -z 0.5"/>
    </group>

    <group ns="drone3">
        <arg name="fcu_url" default="udp://127.0.0.1:14552@14552"/>
        <node pkg="mavros" type="mavros_node" name="mavros" output="screen">
            <param name="fcu_url" value="$(arg fcu_url)"/>
            <param name="gcs_url" value=""/>
            <param name="target_system_id" value="3"/>
            <param name="target_component_id" value="1"/>
            <rosparam param="/rosout/logger_level">debug</rosparam>
        </node>
        <node name="drone_spawner" pkg="gazebo_ros" type="spawn_model" output="screen"
              args="-sdf -file $(find simulacao)/models/EASy.sdf -model drone3 -x -5 -y 0 -z 0.5"/>
    </group>

</launch>
